<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FA0A0A0A">

    <TextView
        android:id="@+id/newShrineDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/newShrineHeader"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <EditText
        android:id="@+id/newShrineNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:hint="@string/newShrineNameHint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#8E8E8E" />

    <EditText
        android:id="@+id/newShrineDescInput"
        android:hint="@string/newShrineDescriptionHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:imeOptions="actionDone"
        android:padding="20dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#8E8E8E"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="6"
        android:gravity="top"/>

    <EditText
        android:id="@+id/newShineMeditationInput"
        android:hint="@string/newShrineMeditationHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:imeOptions="actionDone"
        android:padding="20dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#8E8E8E"
        android:inputType="text" />

    <EditText
        android:id="@+id/newShrineAcceptedResp"
        android:hint="@string/newShrineAcceptedRespHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:imeOptions="actionDone"
        android:padding="20dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#8E8E8E"
        android:inputType="text" />

    <Button
        android:id="@+id/newShineGetCordBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newShrineGetCordBtnLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/newShrineSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submitBtnLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>