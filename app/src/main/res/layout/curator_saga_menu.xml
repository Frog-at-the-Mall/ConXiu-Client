<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curator_saga_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/curator_saga_menu_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/curator_saga_menu_header"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/curator_new_saga_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_saga" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/curator_menu_header"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/curator_test_saga_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST SAGA" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>