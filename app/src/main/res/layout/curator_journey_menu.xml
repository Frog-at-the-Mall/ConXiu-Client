<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curator_journey_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/curator_journey_menu_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="TEST SAGA"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/curator_new_journey_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_journey_button" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/curator_journey_menu_header"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/curator_test_journey_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST JOURNEY" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>