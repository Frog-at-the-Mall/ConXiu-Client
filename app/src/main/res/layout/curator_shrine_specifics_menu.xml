<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curator_shrine_specifics"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/curator_shrine_specifics_menu_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TEST SAGA"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TEST JOURNEY"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TEST SHRINE"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/curator_shrine_specifics_meditation"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E5E5E5" />

        <EditText
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/curator_shrine_specifics_response"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E5E5E5" />

        <EditText
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/curator_shrine_specifics_location"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E5E5E5" />

        <EditText
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/curator_shrine_specifics_next_location"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E5E5E5" />

        <EditText
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/curator_shrine_specifics_nature"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E5E5E5" />

        <EditText
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/curator_shrine_specifics_audio_path"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E5E5E5" />

        <Button
            android:id="@+id/curator_shrine_specifics_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>